<% provide(:title, @user.nick) %>
<h1>
  <%= @user.nick %>
</h1>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <dl class="dl-horizontal">
          <%= image_tag(gravatar_url(@user), alt: @user.nick, class: "gravatar") %>
      </dl>
      <dl class="dl-horizontal">
        <dt>Nick</dt>
        <dd><%= @user.nick %></dd>
      </dl>
      <dl class="dl-horizontal">
        <dt>eMail</dt>
        <dd><%= @user.mail %></dd>
      </dl>
    </section>
  </aside>
</div>
