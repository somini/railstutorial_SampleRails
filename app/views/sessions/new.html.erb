<% provide(:title, "Log In") %>
<h1>Log In</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: accounts_login_path) do |f| %>

      <%= f.label :nick, "Your Nickname" %>
      <%= f.text_field :nick, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: 'checkbox inline' do %>
        <%= f.check_box :remember_me, checked: true %>
        <span>Remember my login in this device</span>
      <% end %>

      <%= f.submit "Log In", class: "btn btn-primary" %>
    <% end %>

    <p>If you do not have an account, <%= link_to "Sign Up", accounts_signup_path %></p>
  </div>
</div>
